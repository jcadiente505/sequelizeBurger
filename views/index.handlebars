<div class="container">
    <div class="row">
        <div class="col-12 align-self-center">
            <h1 class="header">Burgers</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 align-self-center">
            <h3 class="header">EAT DA BURGERS!</h3>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h4 class="header">BURGERS TOO EAT!</h4>
            <ul class="list-group">
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h4 class="header">BURGERS EATEN!</h4>
            <ul class="list-group">
                {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=true}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>







<h2>Add a Burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="bg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>